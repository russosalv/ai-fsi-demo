{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "BancaAlfaApi": {
    "BaseUrl": "https://api-sandbox.bancaalfa.it",
    "P2PTransferEndpoint": "/v1/payments/p2p-transfer",
    "TimeoutSeconds": 30,
    "ApiKey": "demo-api-key",
    "ApiSecret": "demo-api-secret",
    "EnableMocking": true,
    "MockScenarios": {
      "DefaultScenario": "success",
      "Scenarios": {
        "success": {
          "Success": true,
          "DelayMs": 500,
          "MockTransactionId": "TXN-SUCCESS-001"
        },
        "error_insufficient_funds": {
          "Success": false,
          "ErrorCode": "INSUFFICIENT_FUNDS",
          "ErrorMessage": "Fondi insufficienti sul conto mittente",
          "DelayMs": 300
        },
        "error_account_blocked": {
          "Success": false,
          "ErrorCode": "ACCOUNT_BLOCKED",
          "ErrorMessage": "Account destinatario bloccato",
          "DelayMs": 200
        },
        "error_invalid_account": {
          "Success": false,
          "ErrorCode": "VALIDATION_ERROR",
          "ErrorMessage": "Tax ID destinatario non valido",
          "DelayMs": 100
        },
        "slow_response": {
          "Success": true,
          "DelayMs": 3000,
          "MockTransactionId": "TXN-SLOW-001"
        }
      }
    }
  }
}
